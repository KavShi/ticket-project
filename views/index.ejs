<!DOCTYPE html>
<html>
<head>
    <title>Overview</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <div class="content">
        <h1>Support Ticket Overview</h1>
        <br>
        <% if (!isAuthenticated) { %>
            <a href="/login/">Login</a>
        <% } else { %>
            <%if (!(user.name)) {%>
                <h3>Welcome, <%=user.nickname%>.</h3>
            <%} else {%>
                <h3>Welcome, <%=user.name%>.</h3>
            <% } %>
                <a href="/logout/">Logout</a>
                <a href="/form">
                    <button>Create a Support Ticket</button>
                </a>
        <% } %>

        <table>
            <th>Ticketnumber</th>
            <th>Title</th>
            <th>Topic</th>
            <th>Date</th>
            <th>Status</th>
        <%for (const ticket of allTickets) { %>
                <tr>
                    <td><a href="/ticket/<%=ticket.ticketNumber%>"><%=ticket.ticketNumber%></a></td>
                    <td><%=ticket.title%></td>
                    <td><%=ticket.topic%></td>
                    <td><%=ticket.dateCreated%></td>
                    <% if (ticket.ticketStatus === 0) { %>
                        <td>Closed</td>
                    <% } else { %>
                        <td>Active</td>
                    <% } %>
                </tr>
            <%}%>
        </table>
    </div>
</body>
</html>